  "compilerOptions": {
    "target": "es2020",
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext"
  },
  "include": ["./*.ts"],
  "exclude": ["node_modules", "**/node_modules", "**/impl", "**/impl/**"]
}
