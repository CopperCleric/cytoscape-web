{
  "compilerOptions": {
    "target": "ES2020",
    "skipLibCheck": true,
    "rootDir": ".",
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "removeComments": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext"
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules",
    "./CxModel",
    "**/node_modules",
    "./**/impl/*",
    "impl",
    "dist"
  ]
}
